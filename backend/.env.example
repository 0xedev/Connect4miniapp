# Production Environment Variables
NODE_ENV=production
PORT=3001

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://4tune.vercel.app,https://yourdomain.com

# Redis (for scaling to multiple servers)
REDIS_URL=redis://localhost:6379

# Daily.co API (for voice chat)
DAILY_API_KEY=your_daily_api_key_here
DAILY_DOMAIN=your_domain.daily.co

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_CSP_DIRECTIVES=default-src 'self'

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Database (if using PostgreSQL/MongoDB)
DATABASE_URL=your_database_url_here
